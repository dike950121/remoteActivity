<Window x:Class="RemoteServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemoteServer"
        mc:Ignorable="d"
        Title="Remote Server Management Console" Height="450" Width="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Server Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Command="{Binding ToggleServerCommand}" 
                    Content="{Binding IsServerRunning, Converter={StaticResource BoolToStartStopConverter}}"
                    Width="100" Height="30" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding ServerStatus}" 
                     VerticalAlignment="Center"/>
        </StackPanel>
        
        <!-- Client List and Control Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Connected Clients List -->
            <DockPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock DockPanel.Dock="Top" Text="Connected Clients" 
                         Margin="0,0,0,5" FontWeight="Bold"/>
                <Button DockPanel.Dock="Bottom" Content="Disconnect Client" 
                        Command="{Binding DisconnectClientCommand}"
                        Margin="0,5,0,0"/>
                <ListBox ItemsSource="{Binding ConnectedClients}"
                         SelectedValue="{Binding SelectedClientId}"
                         SelectedValuePath="Id">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding IpAddress}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding ConnectedAt, StringFormat='Connected: {0:g}'}" 
                                         FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
            
            <!-- Command Area -->
            <DockPanel Grid.Column="1">
                <TextBlock DockPanel.Dock="Top" Text="Command Center" 
                         Margin="0,0,0,5" FontWeight="Bold"/>
                <DockPanel DockPanel.Dock="Bottom" Margin="0,5,0,0">
                    <Button DockPanel.Dock="Right" Content="Send" 
                            Command="{Binding SendCommandCommand}"
                            Width="80" Margin="5,0,0,0"/>
                    <TextBox Text="{Binding CommandText, UpdateSourceTrigger=PropertyChanged}"/>
                </DockPanel>
                <TextBox AcceptsReturn="True" IsReadOnly="True" 
                         Text="{Binding ServerStatus, Mode=OneWay}"/>
            </DockPanel>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding ServerStatus}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
