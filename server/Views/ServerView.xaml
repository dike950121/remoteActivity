<Window x:Class="server.Views.ServerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Activity Server" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4285F4"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E8F0FE"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#34A853"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FBBC04"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#EA4335"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#202124"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5F6368"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#DADCE0"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3367D6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2A56C6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="12" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Remote Activity Server" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimaryBrush}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="TCP Server with MVC Architecture" 
                               FontSize="16" 
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryLightBrush}" 
                            CornerRadius="8" Padding="12,8" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="{StaticResource PrimaryBrush}" 
                                     VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusLabel" Text="Stopped" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource ErrorBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{StaticResource PrimaryLightBrush}" 
                            CornerRadius="8" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Clients:" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="ClientsLabel" Text="0" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Control Panel -->
            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                <GroupBox Header="Server Control" Style="{StaticResource ModernGroupBoxStyle}">
                    <StackPanel>
                        <TextBlock Text="Port Configuration" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Port:" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,12,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBox x:Name="PortTextBox" Grid.Column="1" 
                                     Text="5555" Style="{StaticResource ModernTextBoxStyle}"/>
                        </Grid>
                        
                        <Button x:Name="StartStopButton" Content="Start Server" 
                                Style="{StaticResource ModernButtonStyle}"
                                Height="40" Margin="0,0,0,16"/>
                        
                        <Separator Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Log Actions" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="ClearLogButton" Content="Clear Log" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100" Height="36" Margin="0,0,8,0"/>
                            <Button x:Name="CopyLogButton" Content="Copy Log" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Width="100" Height="36"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                

            </StackPanel>
            
            <!-- Log Display -->
            <GroupBox Grid.Column="1" Header="Server Log" Style="{StaticResource ModernGroupBoxStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#1E1E1E" 
                            CornerRadius="8" Padding="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="LogTextBox" IsReadOnly="True" 
                                     FontFamily="Consolas" FontSize="12"
                                     Background="Transparent" 
                                     Foreground="#00FF00"
                                     TextWrapping="Wrap" 
                                     AcceptsReturn="True"
                                     BorderThickness="0"
                                     Padding="12"/>
                        </ScrollViewer>
                    </Border>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" 
                                HorizontalAlignment="Right" Margin="0,12,0,0">
                        <TextBlock Text="Log entries will appear here in real-time" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="16,8" Margin="0,16,0,0">
            <TextBlock x:Name="StatusBarText" Text="Ready - MVC Architecture" 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"/>
        </Border>
    </Grid>
</Window> 