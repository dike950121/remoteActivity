<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Remote Activity Server" Height="600" Width="1000">
    <DockPanel>
        <!-- Sidebar Navigation -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="#222">
            <TextBlock Text="Remote Activity" Foreground="White" FontWeight="Bold" FontSize="18" Margin="10"/>
            <Button Content="Dashboard" Margin="10,20,10,0" Height="40"/>
            <Button Content="Clients" Margin="10,5,10,0" Height="40"/>
            <Button Content="Remote Shell" Margin="10,5,10,0" Height="40"/>
            <Button Content="File Manager" Margin="10,5,10,0" Height="40"/>
            <Button Content="Screen Control" Margin="10,5,10,0" Height="40"/>
            <Button Content="Keylogger/Logs" Margin="10,5,10,0" Height="40"/>
            <Button Content="Settings" Margin="10,5,10,0" Height="40"/>
            <Button Content="About" Margin="10,5,10,0" Height="40"/>
        </StackPanel>
        <!-- Main Content Area -->
        <Grid Background="#f5f5f5">
            <ContentControl x:Name="MainContent"/>
        </Grid>
        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#333" Height="28">
            <StatusBarItem>
                <TextBlock Text="Status: Ready" Foreground="White"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Text="|  Connected Clients: 0" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
